<section class='show-project'>
  <div class="container">
    <div class="row">
      <div class="col-md-9 flex">
        <%= image_tag @project.image_1.url%>
        <% if @project.image_3.present? %>
          <%= image_tag @project.image_3.url %>
        <% end %>
        <% if @project.image_4.present? %>
          <%= image_tag @project.image_4.url %>
        <% end %>
        <% if @project.image_5.present? %>
          <%= image_tag @project.image_5.url %>
        <% end %>
      </div>
      <div class="col-md-3 card" style="position: fixed;">
        <h4><%= @project.title%></h4>
        <p style="font-weight:700;">Design by: <%=@project.artist%></p><br />
        <h5>Description:</h5>
        <p><%= simple_format @project.description %></p><br />

        <div class='navlinks'>
          <% if @prev %>
            <%= link_to "Previous", @prev, class: "btn" %>
          <% else %>
            <%= link_to "Previous", '#', :class => "strike"%>
          <% end %>

          <% if @next %>
            <%= link_to "Next", @next, class: "btn" %>
          <% else %>
            <%= link_to "Next", '#', :class => "strike" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
