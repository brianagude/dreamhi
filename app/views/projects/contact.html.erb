<section class="contact mt">
  <div class="container">
      <div class="card">
        <h4>Contact Us</h4><br />
        <form action="https://formspree.io/contact@dreamhi.us" method="POST">
          <input type="text" name="name" placeholder="Your Name" class="btn" style="width: 90%;">
          <input type="hidden" name="_subject" value="New Inquiry!" style="width: 90%;"/>
          <input type="email" name="_replyto" placeholder="Your Email" class="btn" style="width: 90%;">
          <textarea type="text" name="message" placeholder="Your Message" class="btn" style="height: 200px; width: 90%; min-width: 120px;"></textarea>
          <input type="submit" value="Send" class="btn" style="min-width: 80px;">
        </form>
      </div>
      <div class="card">
        <h4>Join Our Mailing List</h4><br />
        <form action="https://formspree.io/contact@dreamhi.us" method="POST">
          <input type="hidden" name="_subject" value="New Email Submission!" style="width: 90%;"/>
          <input type="email" name="_replyto" placeholder="Your Email" class="btn" style="width: 90%;">
          <input type="submit" value="Sign Up" class="btn">
        </form>
      </div>
