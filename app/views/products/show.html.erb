
  <section class='show-product'>
    <div class="container">

      <div class="row">
        <div class="col-md-9 flex">
          <%= image_tag @product.image_1.url%>
          <% if @product.image_3.present? %>
            <%= image_tag @product.image_3.url %>
          <% end %>
          <% if @product.image_4.present? %>
            <%= image_tag @product.image_4.url %>
          <% end %>
          <% if @product.image_5.present? %>
            <%= image_tag @product.image_5.url %>
          <% end %>
        </div>
        <div class="col-md-3 card" style="position: fixed;">
          <h3><%= @product.title%></h3>
          <div>
            <h4>Description</h4>
            <p><%= simple_format @product.description %></p>
          </div>
          <%= simple_form_for [@product, @order_item] do |f|%>
            <%= f.input :size %>
            <%= f.input :color %>
            <%= f.input :quantity %>
            <%= f.button :submit, 'Add to Cart'%>
          <% end %>
          <p><%= link_to "back to all products", products_path %></p>

          <div class='navlinks'>
            <% if @prev %>
              <%= link_to "Previous", @prev, class: "btn" %>
            <% else %>
              <%= link_to "Previous", '#', :class => "strike"%>
            <% end %>

            <% if @next %>
              <%= link_to "Next", @next, class: "btn" %>
            <% else %>
              <%= link_to "Next", '#', :class => "strike" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
